<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="376dp"
        android:layout_height="211dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pergunta1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual a capital do Brasil" />

        <RadioButton
            android:id="@+id/opcaoWashington"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Washintong" />

        <RadioButton
            android:id="@+id/opcaoParis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Paris" />

        <RadioButton
            android:id="@+id/opcaoSãoPaulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="São Paulo" />

        <RadioButton
            android:id="@+id/opcaoBrasilia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Brasília" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="375dp"
        android:layout_height="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="309dp">

        <TextView
            android:id="@+id/pergunta2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Qual o maior entre os 4 primeiros planetas do sistema solar?" />

        <RadioButton
            android:id="@+id/opcaoSol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sol" />

        <RadioButton
            android:id="@+id/opcaoJupiter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jupiter" />

        <RadioButton
            android:id="@+id/opcaoTerra"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terra" />

        <RadioButton
            android:id="@+id/opcaoMarte"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Marte" />
    </RadioGroup>

    <Button
        android:id="@+id/botaoEnviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />
</androidx.constraintlayout.widget.ConstraintLayout>